{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<h1>Hello{{ name }}! ✅</h1>

	{# je crée des variables twig sans rien ds le controller #}
	{% set jacques = {"name": "Jacques", "age": 20} %}
	{% set georges = {"name": "Georges", "age": 50} %}
	{% set jade = {"name": "Jade", "age": null} %}
	{% set users = {jacques,georges,jade } %}

	{# cela permet de simuler les comportements et anticiper  #}

	{# une boucle sur mon tableau twig(users) comme un ttb venant du controlleren php #}
		{% for user in users %}

		{# j'utilise un filtre pour que l'affcihe soit correct #}
			<p>
			Name:{{ user.name | title}}
		</p>

			<p>
			Age:{{ user.age}}
		</p>
		{% else %}


	{% endfor %}


</div>{% endblock %}
