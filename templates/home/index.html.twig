{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<h1>Hello
		{{ name }}! ✅</h1>

	{# cette variable est de type "string" , on l'affiche directement #}
	<p>Ecris par:{{ auteur}}</p>

	{# article est de type "objet" issue de la class std, on accède à sa propriété #}
	<h2>{{ article.title}}</h2>

	<p>{{ article.intro}}</p>

	<p>{{ article.content}}</p>

	{# Structure de controle - Je fais un if else qui affiche ou nou des elements html #}

	{% if false %}

		<p>Je suis la</p>
		{# Ici j'interpole une image depuis le controller #}
		<img width="350px" src="{{image}}">

	{% else %}

		<p>Je ne suis pas la</p>

	{% endif %}

	{# Ici les deux bloc if vont s'afficher, mais pas pour la meme raison #}
	{# en 1er on vérifie que le titre est identique au titre dans le controller #}
	{% if article.title == "Théorie du complot"%}
		<p>
			Super c'est ok
		</p>
	{% endif %}

	{% if article.title %}
		<p>
			Super c'est ok
		</p>
	{% endif %}


</div>{% endblock %}
